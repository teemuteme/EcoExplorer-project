<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="sidebar" maxWidth="160.0" minWidth="0.0" prefHeight="800.0" prefWidth="160.0" style="-fx-background-color: #222752;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.tuni.application.SidebarController">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="160.0" minWidth="0.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="600.0" prefWidth="160.0" spacing="10.0" style="-fx-background-color: #222752;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="frontpageBtn" mnemonicParsing="false" onAction="#openFrontpageScene" prefHeight="65.0" prefWidth="165.0" stylesheets="@application.css" text="Frontpage" textFill="WHITE">
                    <font>
                        <Font name="Ebrima" size="17.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                </Button>
                <Button fx:id="graphicsBtn" mnemonicParsing="false" onAction="#openGraphicsScene" prefHeight="65.0" prefWidth="165.0" stylesheets="@application.css" text="Graphics" textFill="WHITE">
                    <font>
                        <Font name="Ebrima" size="17.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                </Button>
                <Button fx:id="StatisticsBtn" mnemonicParsing="false" onAction="#openStatisticsScene" prefHeight="65.0" prefWidth="165.0" stylesheets="@application.css" text="Statistics" textFill="WHITE">
                    <font>
                        <Font name="Ebrima" size="17.0" />
                    </font>
                </Button>
                <Button fx:id="mapBtn" mnemonicParsing="false" onAction="#openMapScene" prefHeight="65.0" prefWidth="165.0" stylesheets="@application.css" text="Air quality map" textFill="WHITE">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        <VBox alignment="BOTTOM_CENTER" maxWidth="208.0" minWidth="160.0" prefHeight="123.0" prefWidth="208.0">
            <children>
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#OnExitButtonPressed" prefHeight="65.0" prefWidth="165.0" styleClass="exitButton" stylesheets="@application.css" text="Exit" textFill="WHITE">
                    <font>
                        <Font name="Ebrima" size="17.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</VBox>

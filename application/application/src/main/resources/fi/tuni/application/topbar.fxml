<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox fx:id="topbar" style="-fx-background-color: #0f154a;"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="fi.tuni.application.TopbarController">
    <children>
        <AnchorPane prefHeight="24.0" style="-fx-background-color: #0f154a;">
            <children>
                <ImageView fitHeight="33.0" onMouseClicked="#onMenuIconClick"
                    pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-menu-50.png" />
                    </image>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                </ImageView>
            </children>
        </AnchorPane>
        <Pane HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #0f154a;">
            <children>
                <Button fx:id="selectHomeCityBtn" mnemonicParsing="false" text="Select home city"
                    textFill="WHITE" />
                <Button fx:id="selectCurrentCityBtn" mnemonicParsing="false" text="Search city"
                    textFill="WHITE" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets left="5.0" right="5.0" />
    </padding>
</HBox>